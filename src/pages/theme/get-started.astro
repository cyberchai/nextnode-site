---
import {Icon} from 'astro-icon/components';
import { Button, Container, TextCardSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import ContactForm from '../../components/forms/ContactForm.astro';

const seo = {
	title: 'Book A Consultation with NextNode',
	description: 'Get a free consultation call with NextNode to discuss your project needs and how we can help.',
};
---

